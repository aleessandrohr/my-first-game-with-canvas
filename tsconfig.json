{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts"]
}
